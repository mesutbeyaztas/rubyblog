
<%= form_for([@post, @post.comments.build]) do |f| %>
      <p>
      <%= f.label :commenter %><br />
      <%= f.text_field :commenter %>
    </p>
      <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </p>
      <p>
      <%= f.submit %>
    </p>
<% end %>
<%= link_to 'Back', posts_path(@post)%>  <!--buradaki post objesi action'dan geliyor-->
<%= link_to 'Edit', edit_post_path(@post) %>